    "noImplicitThis": true,
    "target": "es5",
    "lib": [
      "es7"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "removeComments": true,
    "outDir": "dist",
    "baseUrl": "."
  },
  "include": [
    "scripts/**/*",
    "../common/scripts/**/*"
  ]
